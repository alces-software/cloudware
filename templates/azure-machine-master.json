{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "cloudwareDomain": {
      "type": "string",
      "metadata": {
        "description": "Enter the Cloudware domain ID"
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Choose the VM name"
      }
    },
    "vmType": {
      "type": "string",
      "metadata": {
        "description": "Choose the VM size to launch"
      }
    },
    "prvSubnetIp": {
      "type": "string",
      "metadata": {
        "description": "Enter the desired prv subnet IP address"
      }
    },
    "mgtSubnetIp": {
      "type": "string",
      "metadata": {
        "description": "Enter the desired mgt subnet IP address"
      }
    }
  },
  "variables": {
    "azureConfig": {
      "imageSubscription": "[concat('/subscriptions/', 'd1e964ef-15c7-4b27-8113-e725167cee83', '/resourceGroups/alcesflight/providers/Microsoft.Compute/images/alces-flight-compute-1.0.0-beta')]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('cloudwareDomain'), '-', parameters('vmName'), '-prv')]",
      "apiVersion": "2017-03-01",
      "tags": {
        "cloudware_domain": "[parameters('cloudwareDomain')]"
      },
      "location": "[resourceGroup().location]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "[concat(parameters('cloudwareDomain'), '-', parameters('vmName'), '-prv')]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('prvSubnetIp')]",
              "subnet": {
                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', 'network'), '/subnets/prv')]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('vmName'))]"
        }
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('cloudwareDomain'), '-', parameters('vmName'), '-mgt')]",
      "apiVersion": "2017-03-01",
      "tags": {
        "cloudware_domain": "[parameters('cloudwareDomain')]"
      },
      "location": "[resourceGroup().location]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "[concat(parameters('cloudwareDomain'), '-', parameters('vmName'), '-mgt')]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('mgtSubnetIp')]",
              "subnet": {
                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', 'network'), '/subnets/mgt')]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('vmName'))]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')",
      "apiVersion": "2016-04-30-preview",
      "tags": {
        "cloudware_domain": "[parameters('cloudwareDomain')]"
      },
      "location": "[resourceGroup().location]",
      "properties": {
        "hardwareProfile": {
          "vmSize": {
            "vmSize": "[parameters('vmType')]"
          }
        },
        "storageProfile": {
          "imageReference": {
            "id": "[variables('azureConfig').imageSubscription]"
          },
          "osDisk": {
            "createOption": "fromImage",
            "managedDisk": {
              "storageAccountType": "Premium_LRS"
            }
          }
        },
        "osProfile": {
          "computerName": "[concat(parameters('vmName'), '.', parameters('cloudwareDomain'))]",
          "adminUsername": "alces",
          "liuxConfiguration": {
            "publicKeys": [
              "path": "/home/alces/.ssh/authorized_keys",
              "keyData": "[parameters('adminPublicKey')]"
            ]
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            { "id": "[concat(resourceId('Microsoft.Network/networkInterfaces'), parameters('cloudwareDomain'), '-', parameters('vmName'), '-prv')]" },
            { "id": "[concat(resourceId('Microsoft.Network/networkInterfaces'), parameters('cloudwareDomain'), '-', parameters('vmName'), '-mgt')]" }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat(reference(concat('Microsoft.Storage/storageAccounts/', parameters('cloudwareDomain').storageAccountName)).primaryEndpoints.blob)]"
          }
        }
      }
    }
  ]
}
