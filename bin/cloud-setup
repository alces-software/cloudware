lib_dir = File.join(__dir__, '..', 'lib')
$LOAD_PATH << File.join(lib_dir)
ENV['BUNDLE_GEMFILE'] ||= File.join(__dir__, '..', 'Gemfile')

Thread.report_on_exception = false

require 'rubygems'
require 'bundler'

if ENV['CLOUDWARE_DEBUG']
  Bundler.setup(ENV['CLOUDWARE_PROVIDER'], :default, :development)
  require 'pry'
  require 'pry-byebug'
else
  Bundler.setup(ENV['CLOUDWARE_PROVIDER'], :default)
end

