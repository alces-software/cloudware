PLATFORM="$1"
shift
if [ "$PLATFORM" == "aws" ]; then
  export CLOUDWARE_PROVIDER=aws
  export CLOUDWARE_APP_NAME="${FLIGHT_PROGRAM_NAME:-cloud} aws"
elif [ "$PLATFORM" == "azure" ]; then
  export CLOUDWARE_PROVIDER=azure
  export CLOUDWARE_APP_NAME="${FLIGHT_PROGRAM_NAME:-cloud} azure"
else
  case $PLATFORM in
    -h|--help|help|"")
      cat <<EOF
  SYNOPSIS:

    ${FLIGHT_PROGRAM_NAME:-cloud} <platform> [<args>]

  DESCRIPTION:

    Perform cloud platform activities.  Valid platforms are "aws"
    and "azure".

EOF
      exit 0
      ;;
    *)
      echo "${FLIGHT_PROGRAM_NAME:-cloud}: unrecognized platform: $PLATFORM"
      exit 1
      ;;
  esac
fi
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
exec ${DIR}/cloud-cli "$@"
